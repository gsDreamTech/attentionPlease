<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lllLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearLayoutNewsFeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <android.support.v7.widget.CardView
            android:id="@+id/card2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="2dp"
            app:contentPadding="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/trans"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/newsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/curved_button"
                    android:paddingBottom="3dp"
                    android:paddingEnd="10dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="10dp"
                    android:paddingStart="8dp"
                    android:paddingTop="3dp"
                    android:text="Team COSMOS"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/newsImage"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/white"
                    android:contentDescription="@string/todo"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/notific" />

                <TextView
                    android:id="@+id/newsDesdription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="left"
                    android:background="@android:color/transparent"
                    android:text="Description"
                    android:textColor="#7F8A92"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/lightGray"
                    android:orientation="vertical"
                    android:paddingTop="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:paddingEnd="15dp"
                        android:paddingStart="15dp">


                        <com.like.LikeButton
                            android:id="@+id/likedepend"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:minWidth="10dp"
                            app:anim_scale_factor="2"
                            app:circle_end_color="@color/colorPrimary"
                            app:circle_start_color="@color/colorPrimary"
                            app:dots_primary_color="@color/colorPrimary"
                            app:dots_secondary_color="@color/colorPrimary"
                            app:icon_size="50dp"
                            app:icon_type="Thumb"
                            app:is_enabled="true"
                            app:like_drawable="@drawable/thumb_on"
                            app:liked="false"
                            app:unlike_drawable="@drawable/thumb_off" />

                        <TextView
                            android:id="@+id/textView18"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <com.like.LikeButton
                            android:id="@+id/bookmarkdepend"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:minWidth="10dp"
                            app:anim_scale_factor="2"
                            app:circle_end_color="@color/yellow"
                            app:circle_start_color="@color/yellow"
                            app:dots_primary_color="@color/yellow"
                            app:dots_secondary_color="@color/yellow"
                            app:icon_size="50dp"
                            app:icon_type="Star"
                            app:is_enabled="true"
                            app:like_drawable="@drawable/star_on"
                            app:liked="false"
                            app:unlike_drawable="@drawable/star_off" />

                        <com.like.LikeButton
                            android:id="@+id/sharedepend"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:minWidth="10dp"
                            app:anim_scale_factor="2"
                            app:circle_end_color="@color/trans"
                            app:circle_start_color="@color/trans"
                            app:dots_primary_color="@color/trans"
                            app:dots_secondary_color="@color/trans"
                            app:icon_size="50dp"
                            app:icon_type="Star"
                            app:is_enabled="true"
                            app:like_drawable="@drawable/ic_menu_share"
                            app:liked="false"
                            app:unlike_drawable="@drawable/ic_menu_share" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>


</LinearLayout>